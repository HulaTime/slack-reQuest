{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "es2016"
    ],
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@Api/*": ["src/api/*"],
      "@Datamappers/*": ["src/datamappers/*"],
      "@DB/*": ["src/db/*"],
      "@Common/*": ["src/common/*"],
      "@Config/*": ["src/config/*"],
      "@Constants/*": ["src/constants/*"],
      "@Lib/*": ["src/lib/*"],
      "@Middlewares/*": ["src/middlewares/*"]
    }
  },
  "exclude": [
    "tests",
    "jest.config.*"
  ]
}
