{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "es2022"
    ],
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@Api/*": ["src/api/*"],
      "@Repos/*": ["src/repositories/*"],
      "@DB/*": ["database/*"],
      "@Common/*": ["src/common/*"],
      "@Config/*": ["src/config/*"],
      "@Constants/*": ["src/constants/*"],
      "@Ioc/*": ["src/ioc/*"],
      "@Lib/*": ["src/lib/*"],
      "@Middlewares/*": ["src/middlewares/*"],
      "@Ui/*": ["src/ui/*"],
      "@Models/*": ["src/models/*"]
    }
  },
  "include": ["src", "database"],
  "exclude": ["**/__tests__/**"]
}
